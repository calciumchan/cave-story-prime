}

actor csp_exp_capsule{
	//$Category "cavestory/exp"
	//$Color 14
	//$NotAngled
	health 1
	+shootable
	+nogravity
	+NOBLOOD
	states{
		spawn:
			cexc a 1
			cexc b 1 bright light("l_exp1")
			loop
		death:
			tnt1 a 0 acs_namedexecute("csp_spawn_death",0,4,0,0)
			tnt1 a 0 acs_namedexecute("csp_exp_spawn",0,10)
			tnt1 a 1
			stop
	}
}
		pickup:
			tnt1 a 0 acs_namedexecute("csp_give_exp",0,20)
			stop
		bounce.Floor:
			tnt1 a 0 a_changevelocity(velx/2,vely/2,4,CVF_REPLACE|CVF_RELATIVE)
			tnt1 a 0 A_PlaySound("exp/bounce")
			goto loopout

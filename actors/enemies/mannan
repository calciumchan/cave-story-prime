//needs blood
//needs sound
//needs xp check

actor csp_e_mannan{
	monster
	speed 0
	painchance 256
	health 12
	height 64
	radius 24
	mass 0x7FFFFFFF
	damagefactor "enemy", 0
	+NOBLOOD
	+Floorhugger
	+shootable
	-pushable
	-solid
	+LOOKALLAROUND
	states{
		spawn:
			mann a 1
			tnt1 a 0 a_look
			loop
		see:
			goto spawn
		pain:
			tnt1 a 0
			tnt1 a 0 a_facetarget
			tnt1 a 0 a_custommissile("csp_pr_mannan",16)
			mann b 8
			goto spawn
		death:
			tnt1 a 0 acs_namedexecute("csp_spawn_death",0,6,0,0)
			tnt1 a 0 acs_namedexecute("csp_exp_spawn",0,1)
		deathloop:
			mann c 2
			tnt1 a 0 a_jumpif(random(0,50)==1,"deathblink")
			loop
		deathblink:
			mann d 4 a_changevelocity(0,0,-999999,CVF_RELATIVE|CVF_REPLACE )
			goto deathloop
	}
} 

actor csp_pr_mannan{
	projectile
	health 1
	damage (2)
	speed 1
	radius 16
	damagetype "enemy"
	+DONTHARMSPECIES
	+DONTHARMCLASS
	+NOINFIGHTING
	+noblood
	states{
		spawn:
			shma a 2 bright a_changevelocity(2,0,0,cvf_relative)
			tnt1 a 0 a_jumpif(velx>=16,"loopout")
			shma b 2 bright a_changevelocity(2,0,0,cvf_relative)
			tnt1 a 0 a_jumpif(velx>=16,"loopout")
			shma c 2 bright a_changevelocity(2,0,0,cvf_relative)
			tnt1 a 0 a_jumpif(velx>=16,"loopout")
			loop
		loopout:
			shma abc 2 bright light("l_polarstar2")
			loop
		death:
			stop
	}
}